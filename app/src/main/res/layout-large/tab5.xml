<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:alpha="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:background="#a0515d81">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:id="@+id/scrollView3" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="499dp"
                    android:padding="@dimen/layout_padding_all"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мышечные группы"
                        android:id="@+id/textView5"
                        android:textSize="20dp"
                        android:textColor="@color/text_color1" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lvMgroupsList"
                        android:footerDividersEnabled="false"
                        android:divider="@color/divider_item"
                        android:dividerHeight="@dimen/divider_item_height" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:padding="@dimen/layout_padding_all"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Новая мышечная группа"
                    android:id="@+id/textView6"
                    android:textSize="20dp"
                    android:textColor="@color/text_color1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Название мышечной группы"
                        android:id="@+id/textView7"
                        android:textSize="15dp"
                        android:textColor="@color/text_color1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etNameNewMgroup"
                        android:hint="введите название" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Добавить мышечную группу"
            android:id="@+id/btnAddMgroup"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bgr"
            android:textColor="@color/button_text"
            android:layout_weight="0.12" />
    </LinearLayout>

</LinearLayout>