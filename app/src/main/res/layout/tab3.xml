<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bground"
    android:alpha="@string/alpha_bg"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:weightSum="1"
        android:background="@color/bgr_info"
        android:padding="@dimen/layout_padding_all"
        android:layout_weight="1.17">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комплексы"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:textColor="@color/text_color1" />

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/exlvComplexsExs" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:background="@color/bgr_add"
        android:padding="@dimen/layout_padding_all"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новый комплекс"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:textColor="@color/text_color1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_weight="0.20">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="192dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название комплекса"
                    android:id="@+id/textView12"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/text_color1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбранные упражнения"
                    android:id="@+id/textView13"
                    android:layout_gravity="left"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/text_color1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/etNameComplex"
                    android:layout_gravity="left" />

                <ExpandableListView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/exlvGroupsExercisesList"
                    android:choiceMode="multipleChoice"
                    android:footerDividersEnabled="true"
                    android:divider="@color/divider_item"
                    android:clickable="true"
                    android:dividerHeight="@dimen/divider_item_height"
                    android:longClickable="true"
                    android:drawSelectorOnTop="true" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="191dp"
            android:layout_height="22dp"
            android:text="Добавить Комплекс"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bgr"
            android:textColor="@color/button_text"
            android:layout_weight="0.12" />
    </LinearLayout>

</LinearLayout>
