<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:alpha="@string/alpha_bg"
    android:background="@color/bground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:background="@color/bgr_info"
                android:padding="@dimen/layout_padding_all"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мышечные группы"
                    android:id="@+id/textView5"
                    android:textSize="20dp"
                    android:textColor="@color/text_color1" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lvMgroupsList"
                    android:footerDividersEnabled="false"
                    android:divider="@color/divider_item"
                    android:dividerHeight="@dimen/divider_item_height" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgr_add"
        android:padding="@dimen/layout_padding_all"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новая мышечная группа"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:textColor="@color/text_color1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.72">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название мышечной группы"
                android:id="@+id/textView7"
                android:textSize="15dp"
                android:textColor="@color/text_color1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="введите название"
                android:ems="10"
                android:id="@+id/etNameNewMgroup" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="Добавить мышечную группу"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_bgr"
            android:textColor="@color/button_text"/>

    </LinearLayout>

</LinearLayout>